    <div class="col-md-6 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Lease Details</h4> 

          <form action="/leaseupload" enctype="multipart/form-data" method="post"> 
           
           
            <div class="form-group row">
              <label for="address" class="col-sm-3 col-form-label">Address</label>
              <div class="col-sm-9">
                <input type="text" class="form-control" name="address"id="address" placeholder="39 Lawley Rd, Belevdere">
              </div>
            </div> 

            <label for="address" class="col-sm-3 col-form-label">Lease File</label>

            <input type="file" class="form-control file-upload-info" name="leasefile"/> 
          
            <div class="form-group row">
                <label for="area" class="col-sm-3 col-form-label">Lease Expiry Date</label>
                <div class="col-sm-9">
                  <input type="date" class="form-control" id="date" name="expirydate" placeholder="Enter lease expiry date" required>
                </div>
              </div>

            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button> 
            
          </form>
        </div>
      </div>
    </div>
       
       <!-- Modal -->
<div class="modal" tabindex="-1" id="action_modal">
  <div class="modal-dialog">
      <div class="modal-content">
            <form id="sample_form" action="/savereno" method="post"> 

              <div class="modal-header" id="dynamic_modal_title">
                  <h5 class="modal-title"></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  <div class="mb-3">
                      <label class="form-label">Repairs Made</label>
                      <input type="text" name="renovation" id="renovation" class="form-control" />
                  </div>
                 
                  
                  
                  <div class="mb-3">
                      <label class="form-label">Date Repaired</label>
                      <input type="date" name="date" id="date" class="form-control" />
                  </div> 
                
                 
                  <div class="mb-3">
                      <label class="form-label">Cost Incurred</label>
                      <input type="text" name="cost" id="cost" class="form-control" />
                  </div>
              </div> 
            
              
              <div class="modal-footer">
                  <input type="hidden" name="id" id="id" />
                  <input type="hidden" name="action" id="action" value="Add" />
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary" id="action_button">Add</button>
              </div>
          </form>
      </div>
  </div> 
