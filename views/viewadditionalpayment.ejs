    <div class="col-lg-8 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Tenants Payment Record</h2> 

            
     <table id="example" class="table table-striped " cellspacing="0" >
        <thead>
            <tr>
              <th>Home<br> Address</th>
                <th>Payment</th>
                <th>Payment<br> Status</th> 
                <th>Month</th> 
                <th>Year</th> 
                <th>Note</th>
                <th>Proof Of<br> Payment</th>
            </tr>
        </thead>
        <tbody> 
            <% if(addpayments.length > 0) {%> 
                <% addpayments.forEach((addpayment)=>{ %> 
            <tr> 
              <td><%= addpayment.address%> </td> 
                <td><%= addpayment.payment%> </td> 
                <td> 
                  <% if(addpayment.paymentstatus == 'Paid') {%>
                  <span class="badge rounded-pill bg-success"><%= addpayment.paymentstatus %></span> 
                  <% } else if (addpayment.paymentstatus == 'Arrears') { %>
                      <span class="badge rounded-pill bg-danger"><%= addpayment.paymentstatus %></span>
                    <% } else { %>
                      <span class="badge rounded-pill bg-primary"><%= addpayment.paymentstatus %></span>
              <% } %> 
              
              </td>                 <td><%= addpayment.month %> </td> 
                <td><%= addpayment.year%> </td> 
                <td><%= addpayment.notes%> </td>
                <td> <a href="/viewproof/<%= addpayment.paymentId %>"><%= addpayment.paymentproof %></a> 
                 </td>

          
            </tr> 

            <% })%> 
            <%} else{%> 
                <tr> 
                  <td>No Records Available</td>
                </tr>
              <% } %> 

        </tbody>
    
    </table>

</div>
