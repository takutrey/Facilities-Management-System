    <%- include('partials/tenant/dashnavbar') %>  

    <%- include('partials/tenant/dashsidebar') %> 
  
    <div class="col-lg-8 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Repairs</h2> 
            <% if(message.length > 0) { %>
              <div class="alert alert-success" role="alert"><%= message %></div>
              <% } %>
            
     <table id="example" class="table table-striped " cellspacing="0" >
        <thead>
            <tr>
                <th>House Repaired</th>
                          <th>Repairs Done</th>
                          <th>Date Repaired</th> 
                          <th>Cost incurred</th>  
                          <th>Actions</th> 
            </tr>
        </thead>
                 <tbody>
                        
                        <% renovations.forEach(function(renovation){ %>
                          <tr> 
                            <td><%= renovation.address %> </td> 
                            <td><%= renovation.renovation %> </td> 
                            <td><%=renovation.date %> </td> 
                            <td><%=renovation.cost %> </td>  
                            <td> 
                              <a class="btn btn-warning btn-sm edit" href="edit/<%= renovation.renovationId %>"> <i class="mdi mdi-border-color"></i></a>
                              <a class="btn btn-danger btn-sm delete" href="delete/<%= renovation.renovationId %>"><i class="mdi mdi-delete"></i></i>

                            </td>
                          </tr>
                     <% }); %> 
     
                        
                      </tbody>
    
    </table>

</div>
</div>
</div>


<!-- Modal -->
<div class="modal" tabindex="-1" id="action_modal">
  <div class="modal-dialog">
      <div class="modal-content">
            <form id="sample_form" action="/savereno" method="post"> 

              <div class="modal-header" id="dynamic_modal_title">
                  <h5 class="modal-title"></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  <div class="mb-3">
                      <label class="form-label">Repaire Done</label>
                      <input type="text" name="renovation" id="renovation" class="form-control" />
                  </div>
                 
                  
                  
                  <div class="mb-3">
                      <label class="form-label">Date Repaired</label>
                      <input type="date" name="date" id="date" class="form-control" />
                  </div> 
                
                 
                  <div class="mb-3">
                      <label class="form-label">Cost Incurred</label>
                      <input type="text" name="cost" id="cost" class="form-control" />
                  </div>
              </div> 
            
              
              <div class="modal-footer">
                  <input type="hidden" name="id" id="id" />
                  <input type="hidden" name="action" id="action" value="Add" />
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary" id="action_button">Add</button>
              </div>
          </form>
      </div>
  </div> 
  </div> 

  <!-- Modal -->
<div class="modal" tabindex="-1" id="req_action_modal">
  <div class="modal-dialog">
      <div class="modal-content">
            <form id="sample_form" action="/requestreno" method="post"> 

              <div class="modal-header" id="dynamic_modal_title">
                  <h5 class="modal-title"></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  <div class="mb-3">
                      <label class="form-label">Repair To Be Done</label>
                      <input type="text" name="renovation" id="renovation" class="form-control" />
                  </div>
                
                 
                  <div class="mb-3">
                      <label class="form-label">Quotation</label>
                      <input type="file" class="form-control" id="customFile" name="quotation"/>                </div>
                    </div>
              </div> 
            
              
              <div class="modal-footer">
                  <input type="hidden" name="id" id="id" />
                  <input type="hidden" name="action" id="action" value="Add" />
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary" id="action_button">Submit</button>
              </div>
          </form>
      </div>
  </div> 
</div>
