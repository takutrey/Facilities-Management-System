$(document).ready(function () {
      
      // DataTable initialisation
      var table = $("#example").DataTable({
          paging: true,
          bDestroy: true,
          dom: '<"dt-buttons"Bf><"clear">lirtp',  
          buttons: [
                              'copy', 'csv', 'excel', 'pdf', 'print'
                          ]
      ,     
      
      });
  
      // Apply the search
      $("#example thead").on("keyup", "input", function () {
          table.column($(this).parent().index())
          .search(this.value)
          .draw();
      }); 
     
      
  });


</script>




