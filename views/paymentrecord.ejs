    <body> 
        <%- include('partials/dashnavbar') %>  

        <%- include('partials/dashsidebar') %> 

        <div class="row">
            <div id="admin" class="col s12">
              <div class="card material-table">
                <div class="table-header">
                  <span class="table-title">Tenants DataTable</span>
                  <div class="actions">
                    <a href="#add_users" class="modal-trigger waves-effect btn-flat nopadding"><i class="material-icons">person_add</i></a>
                    <a href="#" class="search-toggle waves-effect btn-flat nopadding"><i class="material-icons">search</i></a>
                  </div>
                </div>
                <table id="datatable">
                  <thead>
                    <tr>
                        <th>Name</th>
                        <th>Residence<br>Occupied</th>
                        <th>Payment<br>Status</th>
                        <th>Date Paid</th> 
                        <th>Month Paid For</th>
                        <th>Year</th>
                        <th>Notes</th>
