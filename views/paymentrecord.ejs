                    </tr>
                  </thead> 
                  <tbody>
                    <% if(payrecord.length > 0) {%> 
                      <% payrecord.forEach((record)=>{ %> 
                  <tr> 
                      <td><%= record.fullname%> </td> 
                      <td><%= record.address %> </td> 
                      <td><%= record.paymentstatus %> </td> 
                      <td><%= record.date%> </td> 
                      <td><%= record.month%> </td>
                      <td><%= record.year %> </td>
                      <td><%= record.note %> </td>

                      <td> 
                          <a class="btn btn-warning btn-sm edit" href="editrecord/<%= record.id%>"><i class="mdi mdi-border-color"></i></i>
                          <a class="btn btn-danger btn-sm delete" href="deleterecord/<%= record.id%>"><i class="mdi mdi-delete"></i></i>

                  </tr> 

                  <% });%> 
                  <%} else{%> 
                      <td valign="middle">
                        <img src="assets/img/no-data-found.png" width="200" height="200"> 
                      </td>
                  <% } %> 
                
                </tbody>
                </table>
              </div>
            </div>
          </div>
       
