    <div class="col-lg-8 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title"> Payment Record</h2> 

            
     <table id="example" class="table table-striped " cellspacing="0" >
        <thead>
            <tr>
              <th>Tenant<br>Fullname</th>
              <th>Residence<br>Occupied</th>
                                <th>Payment Status</th>
                                <th>Date Paid</th>
                                <th>Month</th>
                                <th>Year</th> 
                                <th>Note</th>
            </tr>
        </thead>
        <tbody> 
                                <% tenpayrecords.forEach((tenpayrecord)=>{ %> 
                            <tr> 
                              <td><%= tenpayrecord.fullname %> </td> 
                                <td><%= tenpayrecord.address %> </td> 
                                <td> 
                                  <% if(tenpayrecord.paymentstatus == 'Paid') {%>
                                  <span class="badge rounded-pill bg-success"><%= tenpayrecord.paymentstatus %></span> 
                                  <% } else if (tenpayrecord.paymentstatus == 'Arrears') { %>
                                      <span class="badge rounded-pill bg-danger"><%= tenpayrecord.paymentstatus %></span>
                                    <% } else { %>
                                      <span class="badge rounded-pill bg-primary"><%= tenpayrecord.paymentstatus %></span>
                              <% } %> 
                              
                              </td>              
                                 <td><%= tenpayrecord.date%> </td> 
                                <td><%= tenpayrecord.month%> </td>
                                <td><%= tenpayrecord.year %> </td>
                                <td><%= tenpayrecord.note %> </td>
        
                            
                            </tr> 

                            <% })%> 
                            

                        </tbody>
    
    </table>

