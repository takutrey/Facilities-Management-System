        </thead>
        <tbody> 
            <% if(addpayments.length > 0) {%> 
                <% addpayments.forEach((addpayment)=>{ %> 
            <tr> 
                <td><%= addpayment.payment%> </td> 
                <td><%= addpayment.paymentstatus %> </td> 
                <td><%= addpayment.month %> </td> 
                <td><%= addpayment.year%> </td> 
                <td><%= addpayment.note%> </td>
                <td><%= addpayment.paymentproof %> </td>

          
            </tr> 

            <% })%> 
            <%} else{%> 
                <tr> 
                  <td>No Records Available</td>
                </tr>
              <% } %> 

        </tbody>
    </table>

</div>
