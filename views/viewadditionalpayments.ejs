    <div class="col-lg-8 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
           
            
     <table id="example" class="table table-striped " cellspacing="0" >
        <thead>
            <tr>
                <th>Payment</th>
                <th>Payment Status</th> 
                <th>Month Paid For</th> 
                <th>Year</th> 
                <th>Note</th>
                <th>Proof Of Payment</th>
                <th>Action</th>
