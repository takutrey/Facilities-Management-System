<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= title %> </title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="/assets/css/stylee.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="/images/images.png" />
  </head>
  <body>
        
        <!-- start navbar partial -->
        <%- include('partials/tenant/dashnavbar') %>  
        <!--end nav bar partial--> 

        <!-- start sidebar partial -->
        <%- include('partials/tenant/dashsidebar') %>  
        <!--end sidebar partial-->

        <div class="col-lg-8 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <h2 class="card-title">My Home</h2> 
                </p> 
                <% if(message.length > 0) { %>
                  <div class="alert alert-success" role="alert"><%= message %></div>
                  <% } %>
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th> Address </th>
                      <th> Location </th>
                      <th> Total Rooms </th>
                      <th> Price </th> 
                      <th> Agent</th> 
                      <th></th>
                      <th></th> 
                      <th></th> 

                    </tr>
                  </thead>
                  <tbody> 

                    <% tenantproperty.forEach(function(tenantprop){ %>
                      <tr>
                        <td><%= tenantprop.address %> </td> 
                        <td><%= tenantprop.location%> </td> 
                        <td><%= tenantprop.rooms%> </td> 
                        <td><%= tenantprop.price %> </td>  
                        <td><%= tenantprop.username %> </td>  

                        <td> 
                          <a class="btn btn-primary"  id="req_add_data"> Request to Renovate</a>

                          <a class="btn btn-primary" id="add_data"> Renovate</a> 

                        </td>
                      </tr>

                  </tbody>
                </table>
              </div>
            </div>
          </div>

        <!-- Modal -->
<div class="modal" tabindex="-1" id="req_action_modal">
  <div class="modal-dialog">
      <div class="modal-content">
            <form id="sample_form" action="/requestreno/<%= tenantprop.vacId %>"  enctype="multipart/form-data" method="post"> 

              <div class="modal-header" id="dynamic_modal_title">
                  <h5 class="modal-title"></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                 <div class="mb-3">
                                    <label>Address</label>
                                    <input type="text" name="address" id="address" class="form-control" value="<%= tenantprop.address %>" />
                                </div>
                  <div class="mb-3">
                      <label class="form-label">Repair To Be Done</label>
                                    <input type="text" name="renovation" id="renovation" class="form-control" />
                  </div>
                 
                  
                  
                  <div class="mb-3">
                      <label class="form-label">Quotation</label>
                                <input type="file" class="form-control" id="customFile" name="quotation"/>                </div>
                  </div> 
                
                  <div class="modal-footer">
                    <input type="hidden" name="id" id="id" />
                    <input type="hidden" name="action" id="action" value="Add" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="action_button">Submit</button>
                </div>
                 
              </div> 
            
              
           
          </form>
      </div>
  </div> 
  </div> 

  <!-- Modal -->
<div class="modal" tabindex="-1" id="action_modal">
  <div class="modal-dialog">
      <div class="modal-content">
            <form id="sample_form" action="/savereno/<%= tenantprop.vacId %>" method="post"> 

              <div class="modal-header" id="dynamic_modal_title">
                  <h5 class="modal-title"></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body"> 

                <div class="mb-3">
                  <label class="form-label">Address</label>
                  <input type="text" name="address" id="address" class="form-control" value=" <%= tenantprop.address %>"/>
              </div> 

                  <div class="mb-3">
                      <label class="form-label">Renovation Made</label>
                      <input type="text" name="renovation" id="renovation" class="form-control" />
                  </div>
                 
                  
                  
                  <div class="mb-3">
                      <label class="form-label">Date Renovated</label>
                      <input type="date" name="date" id="date" class="form-control" />
                  </div> 
                
                 
                  <div class="mb-3">
                      <label class="form-label">Cost Incurred</label>
                      <input type="text" name="cost" id="cost" class="form-control" />
                  </div>
              </div> 
            
              
              <div class="modal-footer">
                  <input type="hidden" name="id" id="id" />
                  <input type="hidden" name="action" id="action" value="Add" />
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary" id="action_button">Add</button>
              </div>
          </form>
      </div>
  </div> 
  </div> 

          <% }); %>  

    <!-- plugins:js -->
    <script src="/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="/assets/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/assets/js/off-canvas.js"></script>
    <script src="/assets/js/hoverable-collapse.js"></script>
    <script src="/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/assets/js/dashboard.js"></script>
    <script src="/assets/js/todolist.js"></script>
    <!-- End custom js for this page -->
  </body>
</html> 

<script> 

setTimeout(function() {
    $('.alert').fadeOut('slow');
}, 2000);

$('#req_add_data').click(function() {
 $('#req_action_modal').modal('show');
}); 

$('#add_data').click(function() {
 $('#action_modal').modal('show');
});
</script> 